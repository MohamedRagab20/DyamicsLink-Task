@using Invoice.Data.Models;
@model List<Stores>

<div class="row">
    <div class="col-md-2">
        <label>Invoice No</label>
    </div>
    <div class="col-md-2">
        <input type="number" class="form-control" id="txtInvoiceNo" value="0"/>
    </div>
    <div class="col-md-2">

    </div>
    <div class="col-md-2">
        <label>Invoice Date</label>
    </div>
    <div class="col-md-2">
        <input type="text" class="form-control" disabled="disabled" value="@DateTime.Now.ToShortDateString()" />
    </div>
</div>

<br />
<div class="row">
    <div class="col-md-2">
        <label>Store</label>
    </div>
    <div class="col-md-2">
        <select class="form-control" id="StoresList">
            @foreach (Stores obj in Model)
            {
                <option value="@obj.Id">
                    @obj.StoreName
                </option>
            }
        </select>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Invoice Details
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <button id="sample_editable_1_new" class="btn green">
                                    Add New <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                    <thead>
                        <tr>
                            <th>
                                Item
                            </th>
                            <th>
                                Unit
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Qty
                            </th>

                            <th>
                                Total
                            </th>
                            <th>
                                Discount
                            </th>
                            <th>
                                Net
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row" style="direction:rtl">
            <div class="col-md-1">
                <label>Total</label>
            </div>
            <div class="col-md-2">
                <input type="number" id="invoiceTotal" class="form-control" value="0"/>
            </div>
        </div>
        <br />
        <div class="row" style="direction:rtl">
            <div class="col-md-1">
                <label>Taxes</label>
            </div>
            <div class="col-md-2">
                <input type="number" id="invoiceTaxes" class="form-control" value="0" />
            </div>
        </div>
        <br />
        <div class="row" style="direction:rtl">
            <div class="col-md-1">
                <label>Net</label>
            </div>
            <div class="col-md-2">
                <input type="number" id="invoiceNet" class="form-control" value="0"/>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-5">

            </div>
            <div class="col-md-2">
                <button title="Save Invoice" onclick="SaveInvoice()" class="form-control btn-primary btn blue">Save Invoice</button>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/js/InvoiceDetails.js"></script>
}